public class Mythread extends Thread{

    private float[] arr;

    Mythread(String name, float[] arr) {
        super(name);
        this.arr = arr;
    }

    @Override
    public void run() {
        int a = arr.length;
        for (int i = 0; i < a; i++) {
         arr[i] = (float)(arr[i] * Math.sin(0.2f + i / 5) * Math.cos(0.2f + i / 5) * Math.cos(0.4f + i / 2));
         }
    }

    public float[] getArr() {
        return arr;
    }
}